{
  "version": 2,
  "builds": [
    { "src": "backend/app.py", "use": "@vercel/python" },
    { "src": "**/*.html", "use": "@vercel/static" },
    { "src": "js/**", "use": "@vercel/static" },
    { "src": "css/**", "use": "@vercel/static" },
    { "src": "images/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/app.py" },
    { "src": "/js/(.*)", "dest": "js/$1" },
    { "src": "/css/(.*)", "dest": "css/$1" },
    { "src": "/images/(.*)", "dest": "images/$1" },
    { "src": "/(.*)", "dest": "index.html" }
  ]
}
